@model TriageSystem.ViewModels.PatientCheckInViewModel

@{
    ViewData["Title"] = "RegisterPatient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/select2.min.css" rel="stylesheet" />
