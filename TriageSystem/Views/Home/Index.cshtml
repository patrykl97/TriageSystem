@using TriageSystem.Areas.Identity.Data
@model TriageSystemUser
@{
    ViewData["Title"] = "Home Page";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Staff.Full_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff.Position)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Staff.Hospital.StaffList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Full_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HospitalID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HospitalID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HospitalID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
