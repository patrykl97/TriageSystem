@model TriageSystem.Models.PatientWaitingList

@{
    ViewData["Title"] = "TriageAssessmentEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TriageAssessmentEdit</h2>

<h4>PatientWaitingList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TriageAssessmentEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PPS" />
            <input type="hidden" asp-for="Condition" />
            <input type="hidden" asp-for="HospitalID" />
            <div class="form-group">

                <label asp-for="PPS" class="control-label"></label>
                <input class="form-control" readonly="readonly" />
                <span asp-validation-for="PPS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Condition" class="control-label"></label>
                <input asp-for="Condition" class="form-control" />
                <span asp-validation-for="Condition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                <select asp-for="Priority" class="form-control"></select>
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time_checked_in" class="control-label"></label>
                <input asp-for="Time_checked_in" class="form-control" />
                <span asp-validation-for="Time_checked_in" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HospitalID" class="control-label"></label>
                <select asp-for="HospitalID" class="form-control" asp-items="ViewBag.HospitalID"></select>
                <span asp-validation-for="HospitalID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
