                    @Html.DisplayFor(modelItem => item.Patient.Full_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PPS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Condition)
                </td>
